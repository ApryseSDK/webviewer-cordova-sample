<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.webviewersample" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>WebViewerCordovaSample</name>
  <description>
    A sample WebViewer app in Cordova.
  </description>
  <author email="support@apryse.com" href="https://www.apryse.com">
    Apryse Software Inc.
  </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <plugin name="cordova-plugin-customurlscheme" source="npm">
    <param name="URL_SCHEME" value="mycustomurl" />
  </plugin>
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <preference name="WKWebViewOnly" value="true"/>
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <preference name="scheme" value="app" />
    <preference name="hostname" value="localhost" />
  </platform>
  <engine name="browser" spec="^5.0.4" />
</widget>
