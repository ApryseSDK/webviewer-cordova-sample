{
    "name": "webviewer-cordova-sample",
    "displayName": "WebViewerCordovaSample",
    "version": "1.0.0",
    "description": "A sample WebViewer app in Cordova.",
    "main": "index.js",
    "scripts": {
        "start": "cordova build browser && cordova run browser",
        "postinstall": "npx @pdftron/webviewer-downloader --webviewerLocation www/js/lib --licenseLocation www/js",
        "add-license": "npx @pdftron/webviewer-downloader --license --licenseLocation www/js",
        "download-webviewer": "npx @pdftron/webviewer-downloader --webviewer --webviewerLocation www/js/lib"
    },
    "author": "PDFTron Systems Inc.",
    "devDependencies": {
        "@pdftron/webviewer-downloader": "^1.0.4",
        "btoa": "^1.2.1",
        "download": "^7.1.0",
        "fs-extra": "^7.0.1"
    },
    "dependencies": {
        "cordova-browser": "^5.0.4",
        "cordova-plugin-whitelist": "^1.3.3"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {}
        },
        "platforms": [
            "browser"
        ]
    }
}